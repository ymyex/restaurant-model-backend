# AI Provider API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=8082
PUBLIC_URL=https://your-ngrok-url.ngrok.io

# Twilio Configuration (optional but recommended for full functionality)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_MESSAGING_FROM=your_twilio_phone_number
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# Google Drive Integration (optional)
GOOGLE_DRIVE_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_DRIVE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# SMS Configuration (optional)
SMS_SHOW_CURRENCY=false
SMS_CURRENCY_LABEL=USD
SMS_ASCII_ONLY=false

# Node Environment
NODE_ENV=development
