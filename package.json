{
  "name": "twilio-realtime",
  "version": "1.0.0",
  "description": "Twilio real-time server with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx tsc && npm run copy-assets",
    "copy-assets": "cp src/recordingsTemplate.html dist/ && cp src/twiml.xml dist/ && cp src/adminPanel.html dist/",
    "test-models": "npm run build && node test-model-system.js",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --watch .env --ext ts,js,xml,env --exec ts-node src/server.ts",
    "heroku-postbuild": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.12",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "googleapis": "^144.0.0",
    "httpdispatcher": "^2.2.0",
    "ts-node": "^10.9.2",
    "twilio": "^5.8.0",
    "typescript": "^5.5.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
